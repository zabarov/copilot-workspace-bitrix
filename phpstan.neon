parameters:
  # Замените module_id через агента 40-tools-init или вручную перед запуском проверок.
  module_id: __MODULE_ID__
  level: 6

  paths:
    - local/modules/%module_id%/lib
    - local/modules/%module_id%/admin

  excludePaths:
    analyse:
      - vendor
      - local/modules/%module_id%/lang
      - local/modules/%module_id%/install
      - local/modules/%module_id%/tests/_data/*
      - local/modules/%module_id%/install/admin/*

  bootstrapFiles:
    - phpstan/bootstrap.php

  scanFiles:
    - phpstan/stubs/_generated.bitrix.php
    - phpstan/stubs/bitrix.stub.php

  treatPhpDocTypesAsCertain: false
