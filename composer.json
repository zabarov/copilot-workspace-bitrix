{
    "name": "simai/simai.storage",
    "description": "SIMAI Storage v2",
    "type": "library",
    "license": "proprietary",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.58",
        "nikic/php-parser": "^4.19",
        "phpcompatibility/php-compatibility": "^10.0@alpha",
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^9.6",
        "qossmic/deptrac-shim": "^1.0",
        "squizlabs/php_codesniffer": "^3.10",
        "symfony/console": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "Simai\\Storage\\": "local/modules/simai.storage/lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Simai\\Storage\\Tests\\": "local/modules/simai.storage/tests/"
        }
    },
    "scripts": {
        "cs": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix",
        "stan": "phpstan analyse --memory-limit=1G",
        "dep": "vendor/bin/deptrac analyse --no-interaction",
        "test": "phpunit --colors=always",
        "check": "composer validate --no-check-all && composer dump-autoload -o && composer cs && composer stan && composer dep"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
