{
  "name": "simai/copilot-template",
  "type": "project",
  "description": "Шаблон Bitrix D7 модуля для SIMAI Copilot",
  "license": "proprietary",
  "require": {
    "php": "^8.1",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.11",
    "friendsofphp/php-cs-fixer": "^3.64",
    "qossmic/deptrac-shim": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Vendor\\Module\\": "local/modules/your.module/lib/"
    }
  },
  "scripts": {
    "cs": "php-cs-fixer fix --config=copilot/config/rules.php-cs-fixer.php",
    "stan": "phpstan analyse -c copilot/config/phpstan.neon",
    "test": "phpunit --configuration copilot/config/phpunit.xml"
  }
}
